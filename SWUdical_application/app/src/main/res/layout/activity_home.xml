<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <!--xml 파일 수정 필요함-->

    <!--    하단바-->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/btn_rcdvali"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/imgbtn_rcdvali"
            android:drawablePadding="0dp"
            android:fontFamily="@font/nanumbarunb"
            android:gravity="center"
            android:text="진료기록 확인"
            android:textColor="@color/mainBlack"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_staffvali"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/imgbtn_staffvali"
            android:drawablePadding="0dp"
            android:fontFamily="@font/nanumbarunb"
            android:gravity="center"
            android:text="의료진 확인"
            android:textColor="@color/mainBlack"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/imgbtn_home"
            android:drawablePadding="0dp"
            android:fontFamily="@font/nanumbarunb"
            android:gravity="center"
            android:text="마이 페이지"
            android:textColor="@color/mainBlack"
            android:textSize="15sp" />


    </LinearLayout>

    <!--    프사-->

    <!--    로그아웃-->

    <!--    수정-->

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="186dp"
        android:layout_height="175dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/home_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/img_profile" />

    <Button
        android:id="@+id/editinfobtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#EAE3F6"
        android:fontFamily="@font/nanumbarunb"
        android:text="EDIT"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/logoutbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.883" />

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:background="#EAE3F6"
        android:fontFamily="@font/nanumbarunb"
        android:text="LOGOUT"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/home_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toEndOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="122dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072"
        app:srcCompat="@drawable/swudical_logo" />

    <TextView
        android:id="@+id/home_mail"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_marginBottom="156dp"
        android:fontFamily="@font/nanumbarunb"
        android:gravity="center|left"
        android:text="\'EDIT\'을 눌러주세요!"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toEndOf="@+id/icon_mail" />

    <ImageView
        android:id="@+id/icon_mail"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="156dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_mail_24" />

    <TextView
        android:id="@+id/home_name"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_marginBottom="44dp"
        android:fontFamily="@font/nanumbarunb"
        android:gravity="center|left"
        android:text="\'EDIT\'을 눌러주세요!"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/home_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toEndOf="@+id/icon_name" />

    <ImageView
        android:id="@+id/icon_id"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/icon_mail"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_assignment_ind_24" />

    <ImageView
        android:id="@+id/icon_name"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/icon_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.025"
        app:srcCompat="@drawable/ic_baseline_face_24" />

    <TextView
        android:id="@+id/home_id"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_marginBottom="44dp"
        android:fontFamily="@font/nanumbarunb"
        android:gravity="center|left"
        android:text="\'EDIT\'을 눌러주세요!"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/home_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toEndOf="@+id/icon_id" />


</androidx.constraintlayout.widget.ConstraintLayout>