<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordsValiActivity">

    <!--    김슈니님의 수술실 -->
    <TextView
        android:id="@+id/textView0"
        android:layout_width="266dp"
        android:layout_height="46dp"
        android:fontFamily="@font/jalnan"
        android:text="김슈니님의 수술실"
        android:textColor="@color/mainPurple"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887" />
    <!--    진료기록 확인하기-->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="345dp"
        android:layout_height="58dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/jalnan"
        android:text="진료기록 확인하기"
        android:textColor="@color/mainBlack"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent" />
    <!--    슈디컬에서는~ -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="349dp"
        android:layout_height="74dp"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/nanumbarunb"
        android:text="@string/recordsvali_string"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent" />
    <!--    확인 가능 목록-->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="256dp"
        android:layout_height="46dp"
        android:layout_marginBottom="388dp"
        android:fontFamily="@font/jalnan"
        android:text="확인 가능 목록"
        android:textColor="@color/mainBlack"
        android:textSize="37sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />
    <!--    표-->
    <TableLayout
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/table_outside"
        android:stretchColumns="*"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.702">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/RecordVali_title_row_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside_violet"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:text="병원"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RecordVali_title_row_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside_violet"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:text="날짜"
                android:textSize="24sp" />



            <TextView
                android:id="@+id/RecordVali_title_row_3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside_violet"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:text="병명"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/RecordVali_row_1_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside"
                android:clickable="true"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:onClick="RecordValirowNum1"
                android:text="OO병원"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RecordVali_row_1_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside"
                android:clickable="true"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:onClick="RecordValirowNum1"
                android:text="20.03.07."
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RecordVali_row_1_3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside"
                android:clickable="true"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:onClick="RecordValirowNum1"
                android:text="뇌종양 수술"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/RecordVali_row_2_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside"
                android:clickable="true"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:onClick="RecordValirowNum2"
                android:text="XX병원"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RecordVali_row_2_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside"
                android:clickable="true"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:onClick="RecordValirowNum2"
                android:text="20.05.17."
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RecordVali_row_2_3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside"
                android:clickable="true"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:onClick="RecordValirowNum2"
                android:text="맹장 수술"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/RecordVali_row_3_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside"
                android:clickable="true"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:onClick="RecordValirowNum3"
                android:text="QQ병원"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RecordVali_row_3_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside"
                android:clickable="true"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:onClick="RecordValirowNum3"
                android:text="20.07.20."
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RecordVali_row_3_3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside"
                android:clickable="true"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:onClick="RecordValirowNum3"
                android:text="라식 수술"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/RecordVali_row_4_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside"
                android:clickable="true"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:onClick="RecordValirowNum4"
                android:text="ZZ병원"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RecordVali_row_4_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside"
                android:clickable="true"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:onClick="RecordValirowNum4"
                android:text="20.03.07."
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RecordVali_row_4_3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/table_inside"
                android:clickable="true"
                android:fontFamily="@font/nanumbarunb"
                android:gravity="center"
                android:onClick="RecordValirowNum4"
                android:text="무릎 수술"
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>
    <!--    하단바-->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/btn_rcdvali"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/imgbtn_rcdvali"
            android:drawablePadding="0dp"
            android:fontFamily="@font/nanumbarunb"
            android:gravity="center"
            android:text="진료기록 확인"
            android:textColor="@color/mainBlack"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_staffvali"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/imgbtn_staffvali"
            android:drawablePadding="0dp"
            android:fontFamily="@font/nanumbarunb"
            android:gravity="center"
            android:text="의료진 확인"
            android:textColor="@color/mainBlack"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/imgbtn_home"
            android:drawablePadding="0dp"
            android:fontFamily="@font/nanumbarunb"
            android:gravity="center"
            android:text="마이 페이지"
            android:textColor="@color/mainBlack"
            android:textSize="15sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>