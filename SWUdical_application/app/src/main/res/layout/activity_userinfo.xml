<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfoActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="318dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="@string/userinfo"
        android:textColor="@color/mainBlack"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userinfo_logo1" />

    <ImageView
        android:id="@+id/userinfo_logo1"
        android:layout_width="292dp"
        android:layout_height="83dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052"
        app:srcCompat="@drawable/logo_n" />

    <TextView
        android:id="@+id/userinfo_name_text"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/nanumsquare_acb"

        android:gravity="center|start|center_vertical"
        android:text="이름"
        android:textColor="@color/mainPurple"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.199"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/birthcode"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/nanumsquare_acb"
        android:gravity="center|start|center_vertical"
        android:text="주민번호"
        android:textColor="@color/mainPurple"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userinfo_name" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="104dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/nanumsquare_acr"
        android:foregroundGravity="center"
        android:gravity="start|center_horizontal|center_vertical"
        android:text="******"
        android:textColor="@color/mainBlack"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthcode" />

    <EditText
        android:id="@+id/userinfo_sex"
        android:layout_width="26dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:fontFamily="@font/nanumsquare_acr"
        android:gravity="center|start|center_vertical"
        android:inputType="number"
        android:maxLength="1"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="italic"
        android:typeface="serif"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/birthcode" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/nanumsquare_acr"
        android:gravity="center|start|center_vertical"
        android:text="-"
        android:textSize="33sp"
        app:layout_constraintEnd_toStartOf="@+id/userinfo_sex"
        app:layout_constraintTop_toBottomOf="@+id/birthcode" />

    <EditText
        android:id="@+id/userinfo_birth"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:fontFamily="@font/nanumsquare_acr"
        android:gravity="center|start|center_vertical"
        android:inputType="number"
        android:maxLength="6"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="italic"
        android:typeface="serif"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthcode" />

    <EditText
        android:id="@+id/userinfo_name"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:fontFamily="@font/nanumsquare_acr"
        android:gravity="center|start|center_vertical"
        android:hint="김슈니"
        android:inputType="textPersonName"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userinfo_name_text" />

    <EditText
        android:id="@+id/userinfo_email"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:fontFamily="@font/nanumsquare_acr"
        android:gravity="center|start|center_vertical"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="italic"
        android:typeface="serif"
        app:layout_constraintBottom_toTopOf="@+id/userinfo_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userinfo_email_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/userinfo_email_text"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/nanumsquare_acb"
        android:gravity="center|start|center_vertical"
        android:text="이메일"
        android:textColor="@color/mainPurple"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.199"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userinfo_birth" />

    <Button
        android:id="@+id/userinfo_next"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:background="@drawable/button_design"
        android:fontFamily="@font/nanumsquare_acb"
        android:text="입력 완료!"
        android:textSize="25sp"
        android:textColor="@color/mainWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.895" />


</androidx.constraintlayout.widget.ConstraintLayout>